<UserControl x:Class="APartners.Views.AddEditShopView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:APartners.Views"
             xmlns:local2="clr-namespace:APartners.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">


    <UserControl.Resources>
        <local2:ImageEqualityConverter x:Key="ImageEqualityConverter"/>
        <local2:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- 📷 Фотографии + Характеристики -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="400" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <!-- Левая часть: фотографии -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Border CornerRadius="20" BorderBrush="#DDD" BorderThickness="1" Background="White">
                    <Grid>
                        <Rectangle RadiusX="20" RadiusY="20">
                            <Rectangle.Fill>
                                <ImageBrush ImageSource="{Binding SelectedImage}" Stretch="Uniform" />
                            </Rectangle.Fill>
                        </Rectangle>
                    </Grid>
                </Border>

                <Border Grid.Column="1" BorderBrush="#DDD" BorderThickness="1" Margin="10, 0, 0, 0" CornerRadius="10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="20" />
                            <RowDefinition />
                            <RowDefinition Height="35" />
                        </Grid.RowDefinitions>

                        <TextBlock Text="{Binding Shop.Photos.Count, Mode=OneWay, StringFormat=Фотографий {0}/5}" VerticalAlignment="Center" Margin="5, 0, 0, 0" />

                        <DataGrid Grid.Row="1" ItemsSource="{Binding Shop.Photos}"
                              AutoGenerateColumns="False"
                              HeadersVisibility="None"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              IsReadOnly="True"
                              RowHeight="50"
                              SelectionMode="Single"
                              SelectedItem="{Binding SelectedImage, Mode=TwoWay}">

                            <DataGrid.Columns>
                                <!-- Фото -->
                                <DataGridTemplateColumn Width="60">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border>
                                                <Border.BorderBrush>
                                                    <MultiBinding Converter="{StaticResource ImageEqualityConverter}">
                                                        <Binding />
                                                        <Binding Path="SelectedImage" />
                                                    </MultiBinding>
                                                </Border.BorderBrush>
                                                <Image Source="{Binding}" Width="50" Height="50" Stretch="Uniform" Cursor="Hand"
                                                   MouseLeftButtonDown="Image_MouseLeftButtonDown" />
                                            </Border>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!-- Кнопки управления -->
                                <DataGridTemplateColumn Width="*">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                                <Button Content="↑" Width="30"
                                                    Command="{Binding DataContext.MoveUpCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                    CommandParameter="{Binding}" />
                                                <Button Content="↓" Width="30" Margin="10,0"
                                                    Command="{Binding DataContext.MoveDownCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                    CommandParameter="{Binding}" />
                                                <Button Content="х" Width="30" Margin="0,0,10,0"
                                                    Command="{Binding DataContext.RemoveCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                    CommandParameter="{Binding}" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>

                        <Button Grid.Row="2" Command="{Binding UpdateImageCommand}" Margin="10, 0, 10, 5" Content="Добавить фото" Foreground="Green" FontSize="14" />
                    </Grid>
                </Border>
            </Grid>

            <!-- Магазины: график работы -->
            <Grid Grid.Row="1" Margin="0,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <TextBlock Text="График работы" FontSize="13" Margin="10,5" />
                <UniformGrid Grid.Row="1" Rows="8" Columns="4">
                    <TextBlock Text="День" />
                    <TextBlock Text="Время С" />
                    <TextBlock Text="Время До" />
                    <TextBlock Text="Рабочий день" />

                    <!-- Понедельник -->
                    <TextBlock Text="Понедельник" />
                    <TextBox Style="{StaticResource OneLine}" Text="{Binding Shop.WorkSheldure.Monday.StartTime, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0, 0, 2, 2" />
                    <TextBox Style="{StaticResource OneLine}" Text="{Binding Shop.WorkSheldure.Monday.EndTime, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0, 0, 2, 2" />
                    <CheckBox IsChecked="{Binding Shop.WorkSheldure.Monday.IsWorkingDay, Mode=TwoWay}" VerticalAlignment="Center" Margin="5, 0" />

                    <!-- Вторник -->
                    <TextBlock Text="Вторник" />
                    <TextBox Style="{StaticResource OneLine}" Text="{Binding Shop.WorkSheldure.Tuesday.StartTime, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  Margin="0, 0, 2, 2" />
                    <TextBox Style="{StaticResource OneLine}" Text="{Binding Shop.WorkSheldure.Tuesday.EndTime, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  Margin="0, 0, 2, 2"  />
                    <CheckBox IsChecked="{Binding Shop.WorkSheldure.Tuesday.IsWorkingDay, Mode=TwoWay}" VerticalAlignment="Center" Margin="5, 0" />

                    <!-- Среда -->
                    <TextBlock Text="Среда" />
                    <TextBox Style="{StaticResource OneLine}" Text="{Binding Shop.WorkSheldure.Wednesday.StartTime, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0, 0, 2, 2" />
                    <TextBox Style="{StaticResource OneLine}" Text="{Binding Shop.WorkSheldure.Wednesday.EndTime, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0, 0, 2, 2" />
                    <CheckBox IsChecked="{Binding Shop.WorkSheldure.Wednesday.IsWorkingDay, Mode=TwoWay}" VerticalAlignment="Center" Margin="5, 0" />

                    <!-- Четверг -->
                    <TextBlock Text="Четверг" />
                    <TextBox Style="{StaticResource OneLine}" Text="{Binding Shop.WorkSheldure.Thursday.StartTime, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0, 0, 2, 2" />
                    <TextBox Style="{StaticResource OneLine}" Text="{Binding Shop.WorkSheldure.Thursday.EndTime, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0, 0, 2, 2" />
                    <CheckBox IsChecked="{Binding Shop.WorkSheldure.Thursday.IsWorkingDay, Mode=TwoWay}" VerticalAlignment="Center" Margin="5, 0" />

                    <!-- Пятница -->
                    <TextBlock Text="Пятница" />
                    <TextBox Style="{StaticResource OneLine}" Text="{Binding Shop.WorkSheldure.Friday.StartTime, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0, 0, 2, 2" />
                    <TextBox Style="{StaticResource OneLine}" Text="{Binding Shop.WorkSheldure.Friday.EndTime, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0, 0, 2, 2" />
                    <CheckBox IsChecked="{Binding Shop.WorkSheldure.Friday.IsWorkingDay, Mode=TwoWay}" VerticalAlignment="Center" Margin="5, 0" />

                    <!-- Суббота -->
                    <TextBlock Text="Суббота" />
                    <TextBox Style="{StaticResource OneLine}" Text="{Binding Shop.WorkSheldure.Saturday.StartTime, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0, 0, 2, 2" />
                    <TextBox Style="{StaticResource OneLine}" Text="{Binding Shop.WorkSheldure.Saturday.EndTime, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0, 0, 2, 2" />
                    <CheckBox IsChecked="{Binding Shop.WorkSheldure.Saturday.IsWorkingDay, Mode=TwoWay}" VerticalAlignment="Center" Margin="5, 0" />

                    <!-- Воскресенье -->
                    <TextBlock Text="Воскресенье" />
                    <TextBox Style="{StaticResource OneLine}" Text="{Binding Shop.WorkSheldure.Sunday.StartTime, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0, 0, 2, 2" />
                    <TextBox Style="{StaticResource OneLine}" Text="{Binding Shop.WorkSheldure.Sunday.EndTime, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0, 0, 2, 2" />
                    <CheckBox IsChecked="{Binding Shop.WorkSheldure.Sunday.IsWorkingDay, Mode=TwoWay}" VerticalAlignment="Center" Margin="5, 0" />
                </UniformGrid>
            </Grid>

            <!-- Правая часть: характеристики -->
            <Grid Grid.Column="1" Grid.RowSpan="2">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="30" />
                </Grid.RowDefinitions>

                <ScrollViewer Margin="10, 0, 0, 10" VerticalScrollBarVisibility="Hidden">
                    <StackPanel>
                        <TextBlock Text="Название*" />
                        <TextBox Style="{StaticResource OneLine}" Text="{Binding Shop.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0, 5, 0, 0" />

                        <TextBlock Text="Описание*" Margin="0, 10, 0, 0" />
                        <TextBox Style="{StaticResource MultiLine}" Text="{Binding Shop.Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0, 5, 0, 0" Height="160" />

                        <TextBlock Text="Адрес" Margin="0, 10, 0, 0" />
                        <Grid  Margin="0, 5, 0, 0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="auto" />
                            </Grid.ColumnDefinitions>

                            <TextBox Style="{StaticResource OneLine}" Text="{Binding Shop.Address, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <Button Grid.Column="1" Content="  Найти  " Command="{Binding SearchCoordinatesCommand}" Margin="5, 0, 5, 0"/>
                        </Grid>

                        <UniformGrid Rows="2">
                            <TextBlock Text="Широта" VerticalAlignment="Bottom" Margin="0, 10, 0, 0" />
                            <TextBlock Text="Долгота" VerticalAlignment="Bottom" Margin="5, 10, 0, 0" />
                            <TextBox Style="{StaticResource OneLine}" Text="{Binding Shop.Latitude, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" Margin="0, 5, 5, 0" />
                            <TextBox Style="{StaticResource OneLine}" Text="{Binding Shop.Longitude, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" Margin="5, 5, 0, 0" />
                        </UniformGrid>

                        <GroupBox Header="Контакты" Margin="0, 10, 0, 0" >
                            <StackPanel>

                                <!-- Кнопка добавления нового контакта -->
                                <Button Content="  Добавить контакт  " Height="28" Foreground="Green" Margin="0,0,0,10"
                                    Command="{Binding AddContactCommand}" HorizontalAlignment="Right" />

                                <!-- Список контактов -->
                                <ItemsControl ItemsSource="{Binding Shop.Contacts}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <DockPanel Margin="0,0,0,5">

                                                <!-- Кнопка удалить справа -->
                                                <Button Content="  Удалить  " Foreground="Red"
                                                    Command="{Binding DataContext.RemoveContactCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                    CommandParameter="{Binding}" 
                                                    Margin="5,0,0,0"
                                                    DockPanel.Dock="Right" />

                                                <!-- ComboBox для выбора типа контакта -->
                                                <ComboBox Style="{StaticResource OneLineComboBox}" 
                                                      ItemsSource="{Binding DataContext.ContactTypes, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                      DisplayMemberPath="Name"
                                                      SelectedValuePath="Id"
                                                      SelectedValue="{Binding ContactTypeId, Mode=TwoWay}"
                                                      Margin="0,0,5,0" MinWidth="80" />

                                                <!-- TextBox для ввода значения контакта -->
                                                <TextBox Style="{StaticResource OneLine}" 
                                 Text="{Binding Value, Mode=TwoWay}" />
                                            </DockPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                            </StackPanel>
                        </GroupBox>

                    </StackPanel>
                </ScrollViewer>

                <!-- ✅ Кнопка сохранить -->
                <UniformGrid Grid.Row="1" Grid.Column="1" Rows="1">
                    <Button Content="Отмена" Foreground="Red" FontSize="15" Command="{Binding CancelCommand}" Margin="10, 0" />
                    <Button Content="Сохранить" Foreground="Green" FontSize="15" Command="{Binding SaveCommand}" />
                </UniformGrid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
