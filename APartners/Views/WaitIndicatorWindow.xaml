<Window x:Class="APartners.Views.WaitIndicatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:APartners.Views"
        mc:Ignorable="d"
        Height="120" Width="300"
        WindowStyle="None"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Topmost="True"
        Background="White"
        AllowsTransparency="True">
    
    <Border CornerRadius="10" Background="White" BorderBrush="Gray" BorderThickness="1" Padding="20">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock x:Name="MessageText" Text="Пожалуйста, подождите..." Margin="0,0,0,10" FontSize="14" TextAlignment="Center"/>
            <ProgressBar IsIndeterminate="True" Width="200" Height="20"/>
        </StackPanel>
    </Border>
</Window>
